{
  "name": "@ar-io/trusthash-sidecar",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts src/migrate.ts --outdir dist --target node",
    "start": "node dist/index.js",
    "migrate": "node dist/migrate.js",
    "clean": "rm -rf dist",
    "test": "bun test",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "dependencies": {
    "@hono/node-server": "^1.16.0",
    "blockhash-core": "^0.1.0",
    "duckdb-async": "^1.1.0",
    "hono": "^4.6.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "sharp": "^0.33.0",
    "undici": "^6.21.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.3.0",
    "bun-types": "^1.2.0"
  }
}
