{
  "name": "@ar-io/trusthash-sidecar",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run dist/index.js",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:e2e": "bun run scripts/e2e-test.ts",
    "test:all": "bun test && bun run test:e2e",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "@hono/node-server": "^1.13.0",
    "sharp": "^0.33.0",
    "blockhash-core": "^0.1.0",
    "@trustnxt/c2pa-ts": "^0.5.0",
    "@ardrive/turbo-sdk": "^1.15.0",
    "@ar.io/sdk": "^3.0.0",
    "duckdb-async": "^1.1.0",
    "arweave": "^1.14.0",
    "zod": "^3.23.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.3.0",
    "bun-types": "^1.2.0"
  }
}
