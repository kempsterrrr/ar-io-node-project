{
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "auth": {
      "mode": "token"
    },
    "controlUi": {
      "enabled": true,
      "allowInsecureAuth": false
    },
    "trustedProxies": ["127.0.0.1"]
  },
  "plugins": {
    "allow": ["openclaw-ario-plugin"],
    "entries": {
      "openclaw-ario-plugin": {
        "enabled": true,
        "config": {
          "gatewayUrl": "https://ario.agenticway.io",
          "timeout": 30000,
          "ssh": {
            "host": "GATEWAY_PUBLIC_IP",
            "user": "root",
            "keyPath": "/home/node/.ssh/gateway_key",
            "workingDirectory": "/root/ar-io-gateway"
          }
        }
      }
    }
  }
}
